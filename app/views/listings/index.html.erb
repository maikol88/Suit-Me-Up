

<h1>Listing Listings</h1>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= image_tag listing.image.url(:medium) %>
            <div class="caption">
              <h3><%= listing.name %></h3>


              <p><span class="quiet"><small>Sold by: <%= listing.user.name %></small></span></p>
              <%= link_to 'Show', listing, class: "btn btn-link" %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-link" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Listing', new_listing_path %>
