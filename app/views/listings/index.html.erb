<div class="jumbotron">
  <h1>Items from around the world</h1>
  <h2 class="align-right">Discover one-of-a-kind items</h2>
</div>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= link_to image_tag(listing.image.url), listing%>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><span class="quiet"><small>Sold by: <%= listing.user.name %></small></span></p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, data: { no_turbolink: true }  %>
<% end %>